<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.smartchat"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>SmartChat</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>

    <content src="index.html" />

    <!-- ✅ Allow any origin (for development) -->
    <access origin="*" />

    <!-- ✅ Allow navigation (needed for WebView API calls, local pages, etc.) -->
    <allow-navigation href="*" />

    <!-- ✅ Allow intents for external links or deep linking -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- ✅ Platform-specific settings -->
    <platform name="android">
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        <preference name="loadUrlTimeoutValue" value="70000" />
        <preference name="Orientation" value="portrait" />
        <!-- This ensures Cordova allows your API calls without needing whitelist plugin -->
        <allow-intent href="*" />
        <allow-navigation href="*" />
        <access origin="*" />
    </platform>
</widget>
